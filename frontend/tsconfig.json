{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": "./ts",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": false,
    "noEmitOnError": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"]
  },
  "include": ["ts/**/*"],
  "exclude": ["node_modules", "dist"]
}
